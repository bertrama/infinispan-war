<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

   <display-name>Infinispan cache REST server</display-name>

   <!-- Specify your cache configuration file -->
   <!--
   <context-param>
      <param-name>infinispan.config</param-name>
      <param-value>config-samples/sample.xml</param-value>
   </context-param>
   -->

   <!-- Managed bean name to look up when the REST server is running an app server -->
   <context-param>
      <param-name>infinispan.cachemanager.bean</param-name>
      <param-value>DefaultCacheManager</param-value>
   </context-param>

   <listener>
      <listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class>
      <load-on-startup>1</load-on-startup>
   </listener>
   <listener>
      <listener-class>org.infinispan.rest.ServerBootstrap</listener-class>
      <load-on-startup>1</load-on-startup>
   </listener>
   <listener>
      <listener-class>edu.umich.lib.infinispan.RestListener</listener-class>
      <load-on-startup>1</load-on-startup>
   </listener>
   <listener>
      <listener-class>edu.umich.lib.infinispan.HotRodListener</listener-class>
      <load-on-startup>1</load-on-startup>
   </listener>
   <listener>
      <listener-class>edu.umich.lib.infinispan.MemcachedListener</listener-class>
      <load-on-startup>1</load-on-startup>
   </listener>

   <servlet>
      <servlet-name>Resteasy</servlet-name>
      <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>Resteasy</servlet-name>
      <url-pattern>/rest/*</url-pattern>
   </servlet-mapping>

   <welcome-file-list>
      <welcome-file>/index.html</welcome-file>
   </welcome-file-list>

</web-app>

